<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/DrakMain">

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/idPieChart"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_above="@+id/tvPiechart"></com.github.mikephil.charting.charts.PieChart>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Category: Select from the Pie Chart\n Money: $ 00.00"
        android:layout_alignParentBottom="true"
        android:textSize="20dp"
        android:textAlignment="center"
        android:id="@+id/tvPiechart"
        android:fontFamily="sans-serif-condensed"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>